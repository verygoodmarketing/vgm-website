---
interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<section class="bg-blue-600 py-12 text-white md:py-20">
  <div class="container mx-auto px-4 text-center">
    <h1 class="mb-6 text-3xl font-bold md:text-5xl">{title}</h1>
    <p class="mx-auto max-w-3xl text-xl text-white">{description}</p>
  </div>
</section>
