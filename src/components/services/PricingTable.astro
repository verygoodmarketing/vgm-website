---
import { Check } from 'lucide-react';
import { Card, CardHeader, CardContent, CardFooter } from '@/ui/card';
import { Link } from '@/ui/link';

const { title, price, recurringPrice, recurringPeriod, features, buttonText, buttonLink } =
  Astro.props;
---

<Card className="mx-auto max-w-lg overflow-hidden">
  <CardHeader className="bg-blue-600 p-6 text-center text-white">
    <h3 class="text-2xl font-bold">{title}</h3>
  </CardHeader>
  <CardContent className="p-8">
    <div class="mb-8 text-center">
      <div class="flex items-center justify-center">
        <span class="text-4xl font-bold">${price}</span>
        <span class="ml-2 text-gray-600">upfront</span>
      </div>
      <div class="mt-2 flex items-center justify-center">
        <span class="text-2xl font-bold">+${recurringPrice}</span>
        <span class="ml-2 text-gray-600">/{recurringPeriod}</span>
      </div>
    </div>

    <ul class="mb-8 space-y-3">
      {
        features.map((feature: string, index: number) => (
          <li class="flex items-start">
            <Check className="h-5 w-5 text-blue-600 mr-2 mt-0.5" />
            <span class="text-gray-700">{feature}</span>
          </li>
        ))
      }
    </ul>
  </CardContent>
  <CardFooter className="flex justify-center p-8 pt-0">
    <Link className="w-full" variant="blue" size="lg" href="/contact?service=website-creation">
      Get Started
    </Link>
  </CardFooter>
</Card>
