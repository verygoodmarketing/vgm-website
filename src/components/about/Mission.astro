---
import { Image } from 'astro:assets';

interface Props {
  imgSrc?: string;
  imgAlt?: string;
  content?: string;
}

const {
  imgSrc = '/src/assets/images/placeholder.svg',
  imgAlt = 'Our mission illustration',
  content = 'Very Good Marketing Co. LLC was founded in 2024 with a clear mission: to help small businesses market themselves effectively without being swindled.',
} = Astro.props;

// Split content into paragraphs if it exists
const paragraphs = content ? content.split('\n\n').filter((p) => p.trim()) : [];
---

<section class="bg-white py-12 md:py-20">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 items-center gap-12 lg:grid-cols-2">
      <div>
        <h2 class="mb-6 text-3xl font-bold">Our Mission</h2>
        {paragraphs.map((paragraph) => <p class="mb-6 text-lg">{paragraph}</p>)}
      </div>
      <div class="relative h-[400px] overflow-hidden rounded-lg shadow-xl">
        <Image
          src={imgSrc}
          alt={imgAlt}
          width={600}
          height={600}
          class="h-full w-full object-cover"
        />
      </div>
    </div>
  </div>
</section>
