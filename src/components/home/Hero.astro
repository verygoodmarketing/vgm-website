---
import { Image } from 'astro:assets';
import { Card, CardContent } from '@/ui/card';
import { Check } from 'lucide-react';
import { Link } from '@/ui/link';
---

<section class="relative overflow-hidden bg-gradient-to-r from-blue-600 to-indigo-700 text-white">
  <div class="absolute inset-0 opacity-10">
    <Image
      src="/src/assets/images/placeholder.svg"
      alt="Background pattern"
      width={1920}
      height={1080}
      class="object-cover"
    />
  </div>

  <div class="relative z-10 container mx-auto px-4 py-20 md:py-32">
    <div class="grid grid-cols-1 items-center gap-12 lg:grid-cols-2">
      <div>
        <h1 class="mb-6 text-4xl leading-tight font-bold md:text-5xl lg:text-6xl">
          Marketing with
          <span class="text-amber-400">Complete Transparency</span>
        </h1>
        <p class="mb-8 text-xl text-white md:text-2xl">
          Helping small businesses advertise cost-effectively without the usual marketing smoke and
          mirrors.
        </p>
        <div class="flex flex-col gap-4 sm:flex-row">
          <Link href="/services" variant="amber" size="lg" client:load> Explore Our Services </Link>
          <Link href="/contact" variant="outlineDark" size="lg" client:load>
            Free Consultation
          </Link>
        </div>
      </div>

      <div class="relative">
        <Card className="glass-effect" client:load>
          <CardContent className="p-6 md:p-8">
            <h2 class="mb-4 text-2xl font-bold text-gray-900">Why Choose Us?</h2>
            <ul class="space-y-3">
              <li class="flex items-start">
                <div class="mt-1 mr-3 rounded-full bg-amber-500 p-1">
                  <Check className="h-4 w-4 text-white" client:load />
                </div>
                <span class="text-gray-900">Founded in 2022 with a focus on transparency</span>
              </li>
              <li class="flex items-start">
                <div class="mt-1 mr-3 rounded-full bg-amber-500 p-1">
                  <Check className="h-4 w-4 text-white" client:load />
                </div>
                <span class="text-gray-900">Clear, upfront pricing with no hidden fees</span>
              </li>
              <li class="flex items-start">
                <div class="mt-1 mr-3 rounded-full bg-amber-500 p-1">
                  <Check className="h-4 w-4 text-white" client:load />
                </div>
                <span class="text-gray-900">Specialized in helping small service businesses</span>
              </li>
              <li class="flex items-start">
                <div class="mt-1 mr-3 rounded-full bg-amber-500 p-1">
                  <Check className="h-4 w-4 text-white" client:load />
                </div>
                <span class="text-gray-900">Educational approach to empower your decisions</span>
              </li>
            </ul>
          </CardContent>
        </Card>
      </div>
    </div>
  </div>
</section>
