---
import MainLayout from '../layouts/MainLayout.astro';
import { getEntry } from 'astro:content';

const page = await getEntry('pages', 'about');

if (!page) {
  throw new Error('Page not found');
}

const { Content } = await page.render();
---

<MainLayout title={page.data.title} description={page.data.description}>
  <Content />
  <div class="mt-4 text-sm text-gray-600">
    Last updated: {page.data.updatedDate.toLocaleDateString()}
    {page.data.metadata && <p>Author: {page.data.metadata.author}</p>}
  </div>
</MainLayout>
