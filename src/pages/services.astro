---
import { getEntry } from 'astro:content';
import PageLayout from '../layouts/PageLayout.astro';

const page = await getEntry('pages', 'services');
const { Content } = await page.render();
---

<PageLayout title={page.data.title} description={page.data.description}>
  <Content />

  {
    page.data.features && (
      <div class="mt-8">
        <h2 class="mb-4 text-2xl font-bold">Our Features</h2>
        <ul class="list-disc space-y-2 pl-6">
          {page.data.features.map((feature: string) => (
            <li class="text-gray-700">{feature}</li>
          ))}
        </ul>
      </div>
    )
  }

  <div class="mt-4 text-sm text-gray-600">
    Last updated: {page.data.updatedDate.toLocaleDateString()}
    {page.data.metadata && <p>Author: {page.data.metadata.author}</p>}
  </div>
</PageLayout>
